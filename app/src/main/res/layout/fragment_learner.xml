            <com.google.android.material.button.MaterialButton android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:text="收藏"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:textColor="#666666"
                app:icon="@drawable/baseline_favorite_border_24"
                app:iconGravity="textTop"
                app:iconSize="20dp"
                app:iconTint="@color/black"
                android:id="@+id/item_collect"/>
            <com.google.android.material.button.MaterialButton android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:text="问答"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:textColor="#666666"
                app:icon="@drawable/baseline_question_mark_24"
                app:iconGravity="textTop"
                app:iconSize="20dp"
                app:iconTint="@color/black"
                android:id="@+id/item_questions"/>
